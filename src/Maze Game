#include <iostream>
#include <fstream>
#include <string>
#include <filesystem>
using namespace std;
 
int main()
{
  // Define Variables
  ifstream inFile;
  string word;
  string keyword;
  string file;
  std::string path = "/Riddles";
  int count = 0;

  // Asking for File
  cout << "Choose one of the following riddle types: ";
  for (const auto & entry : fs::directory_iterator(path)) {
    std::cout << entry.path() << std::endl;
  }
  cin >> file;
  cout << endl;
  inFile.open(file);
  if (inFile.fail())
  {
    cout << file << "is an invalid option \"" << "\".";
    return 0;
  }
  

  // Closing file
  inFile.close();

  return 0;
}
